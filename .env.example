# ============================================
# FrigoTIC - Configuración de Entorno
# ============================================
# Copia este archivo como .env y configura los valores
# NUNCA subas el archivo .env a Git
# ============================================

# === BASE DE DATOS ===
DB_HOST=localhost
DB_PORT=3306
DB_NAME=frigotic
DB_USER=root
DB_PASS=

# === SMTP (Correo) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_ENCRYPTION=tls
SMTP_USER=frigotic@gmail.com
SMTP_PASS=
SMTP_FROM_NAME=FrigoTIC

# === APLICACIÓN ===
APP_NAME=FrigoTIC
APP_URL=http://localhost/frigotic
APP_DEBUG=true
APP_ENV=development
